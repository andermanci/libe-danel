<div id="map" class={Astro.props.class}></div>

<script is:inline>
    function initMap() { 
        map = new google.maps.Map(document.getElementById('map'), { 
            center: {lat: 43.3494868, lng: -1.8238165}, 
            zoom: 13 
        }); 
        setMarker();
    }

    function addMarker(location) {
        const marker = new google.maps.Marker({
            position: location,
            map: map
        });

        const contentString =
            '<div id="content">' +
                '<div id="siteNotice">' +
                "</div>" +
                '<h1 id="firstHeading" class="firstHeading">Asador Sutan</h1>' +
                '<div id="bodyContent">' +
                    '<p><a href="https://www.google.com/maps?ll=43.349726,-1.825433&z=18&t=m&hl=es-ES&gl=US&mapclient=apiv3&cid=4593480773902097949" target="_blank">Ver en Google Maps</a></p>' +
                "</div>" +
            "</div>"
        ;

        const infoWindow = new google.maps.InfoWindow({
            content: contentString
        });

        infoWindow.open(map, marker);
    }

    function setMarker() {
        sutan = new google.maps.LatLng(43.3494868, -1.8238165);
        addMarker(sutan);
    }

    initMap();
</script>